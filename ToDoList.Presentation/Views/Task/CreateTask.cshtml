@using ToDoList.Domain.Enum;

@{
    ViewData["Title"] = "Creating a task";
}

<h4 class="mb-3 text-muted">Creating a task</h4>
<form id="createTaskForm">
    <div class="mb-3">
        <label class="form-label">Task name</label>
        <input name="name" type="text" class="form-control" />
    </div>
    <label class="form-label">Task priority</label>
    <select name="priority" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Priority>()"></select>
    <div class="mb-3">
        <label class="form-label">Task description</label>
        <textarea name="description" type="text" class="form-control" rows="3"></textarea>
    </div>
    <button id="createTask" class="btn btn-primary">Create task</button>
</form>
<br />
<table class="table table-dark table-hover" id="tableId">
    <thead>
        <tr>
            <th style="text-align:center">Title</th>
            <th style="text-align:center">Task priority</th>
            <th style="text-align:center">Description</th>
            <th style="text-align:center">Readiness</th>
            <th style="text-align:center">Action</th>
        </tr>
    </thead>
    <tbody style="text-align:center"></tbody>
</table>

@section Scripts
    {
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>

        let taskTable = $('#tableId').DataTable({
            serverSide: true,
            searching: false,
            paging: false,
            sorting: false,
            columnDefs: [
            {
                ordertable: false,
                _targets: '_all'
            }],

            ajax: {
                url: '@Url.Action("TaskHandler")',
                method: 'POST',
            },

            columns: [
                { data: 'name' },
                { data: 'priority' },
                { data: 'description' },
                { data: 'isCompleted' },
                {
                    data: null,
                    sortable: false,
                    render: function (data, type) {
                        return '<button class="btn btn-success btn-sm center-block">Complete the task</button>'
                    }
                },
            ],

            createRow: function(nRow, data) {
                for (var i = i; i < taskTable.columns().header().length - 1; i++) {
                     $('td', nRow).eq(i).css('cursor', 'pointer')
                }
            }
        })

        $('#createTask').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateTask", "Task")',
                data: $('#createTaskForm').serialize(),
                success: function (response) {
                    Swal.fire({
                        title: 'Information',
                        text: response.description,
                        icon: 'success',
                        confirmButtonText: 'Good'
                    })
                },

                error: function (response) {
                    Swal.fire({
                        title: 'Information',
                        text: response.responseJSON.description,
                        icon: 'error',
                        confirmButtonText: 'Good'
                    })
                }
            })
        })
    </script>
}